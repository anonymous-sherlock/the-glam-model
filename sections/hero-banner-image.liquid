{% liquid
  assign alt_text = section.settings.image_alt
  assign banner_image = section.settings.banner_image
  assign object_fit = section.settings.object_fit
  assign desktop_height = section.settings.desktop_height
  assign mobile_height = section.settings.mobile_height
%}

<style>
  .hero-image-banner {
    width: 100%;
    height: 100%;
    height: {{desktop_height | append: 'vh'}};
  }
  .banner-image {
    width: 100%;
    height: 100%;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }
  @media screen and (max-width: 600px) {
    .hero-image-banner {
      height: {{mobile_height | append: 'vh'}};
    }
  }
</style>
<div class="hero-image-banner">
  {% if banner_image != null or banner_image != blank %}
    <div
      class="banner-image"
      style="
        background: url('{{ banner_image | image_url }}') center;
        background-size: {{ object_fit | default: 'cover' }};
      "
    >
      <figcaption style="display: none;">{{ alt_text }}</figcaption>
    </div>
  {% endif %}
</div>
{% schema %}
{
  "name": "Hero Banner Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Select Banner Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Alt Text"
    },
    {
      "type": "select",
      "id": "object_fit",
      "label": "Object Fit",
      "options": [
        { "value": "cover", "label": "Cover" },
        { "value": "contain", "label": "Contain" }
      ],
      "default": "cover"
    },
    {
      "type": "header",
      "content": "Banner Height"
    },
    {
      "type": "range",
      "id": "mobile_height",
      "label": "Mobile Height (vh)",
      "default": 50,
      "min": 10,
      "max": 100,
      "step": 1
    },
    {
      "type": "range",
      "id": "desktop_height",
      "label": "Desktop Height (vh)",
      "default": 80,
      "min": 50,
      "max": 100,
      "step": 1
    }
  ],
  "presets": [
    {
      "name": "Hero Banner Image"
    }
  ]
}
{% endschema %}
