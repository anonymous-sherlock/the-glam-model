{% liquid
  assign isEditor = request.design_mode
  assign desktop_margin_top = section.settings.desktop_margin_top
  assign desktop_margin_bottom = section.settings.desktop_margin_bottom
  assign mobile_margin_top = section.settings.mobile_margin_top
  assign mobile_margin_bottom = section.settings.mobile_margin_bottom
  assign content_image = section.settings.content_image
%}
<style>
    .brand_analysis {
        margin-top: {{ desktop_margin_top | append: 'px' }};
        margin-bottom: {{ desktop_margin_bottom | append: 'px' }};
    }
    .brand_analysis .row {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .brand_analysis_left {
        display: block;
        margin: auto;
        justify-content: center;
        flex: 0 0 auto;
        box-sizing: border-box;
    }
    .brand_analysis_left {
        flex: 0 0 auto;
        width: 58.3333333333%;
    }
    .brand_analysis_left .heading {
        padding-bottom: 69px;
        font-family: "Montserrat", sans-serif;
        display: flex;
        justify-content: start;
        align-items: center;
    }
    .brand_analysis_left .heading .big_text {
        color: #845ec2;
        padding: 0 0.3rem;
        font-family: "Montserrat", sans-serif;
        font-size: 20em;
        font-weight: 700;
    }
    .brand_analysis .heading .small_text{
        font-size: 4.2em;
        font-weight: 600;
        text-align: left;
        line-height: 1em;
    }
    .analysis_button {
        border: 4px solid #000;
        border-radius: 37px;
        padding: 6px 54px 12px 12px;
        cursor: pointer;
    }
    .analysis_button {
        border: 4px solid #000;
        border-radius: 37px;
        padding: 6px 54px 12px 12px;
        cursor: pointer;
    }
    .analysis_button a {
        text-decoration: none;
        background: none;
        border-radius: 12px;
        border: none;
        padding: 5px;
    }
    .analysis_button a button {
        text-align: right;
        background: none;
        border: none;
        text-decoration: none;
        color: #000000;
        font-size: 41px;
        font-weight: 600;
        line-height: 48.76px;
        position: relative;
        font-family: "Montserrat", sans-serif;
    }
    .analysis_button a .sub_text{
        text-decoration: none;
        color: #000000;
        font-size: 24px;
        line-height: 29.26px;
        font-weight: 400;
    }
    .analysis_button a button .brand_button_icon {
        position: absolute;
        font-size: 4em;
        top: 50%;
        right: -23%;
        color: #845ec2;
        transform: translateY(-50%);
    }
    .brand_button_icon::before{
        z-index: 5;
        position: relative;
    }
    .brand_analysis_content_image {
        width: 100%;
        height: 100%;
    }
  /* Responsive  */

    @media screen and (max-width: 768px) {
        .brand_analysis {
            margin-top: {{ mobile_margin_top | append: 'px' }};
            margin-bottom: {{ mobile_margin_bottom | append: 'px' }};
        }
        .brand_analysis  .row {
        flex-wrap: wrap;
        }
        .brand_analysis .row > * {
        flex-shrink: 0;
        width: 100%;
        max-width: 100%;
        }
        .brand_analysis_left .heading .big_text {
            font-size: 12em;
        }
        .brand_analysis .heading .small_text {
            font-size: 2.5em;
        }
        .brand_analysis_left .heading {
            padding-bottom: 30px;
        }
        .analysis_button {
            padding: 10px;
        }
        .analysis_button a button {
            font-size: 22px;
            line-height:30px;
            text-align: left;
        }
        .analysis_button a .sub_text {
            font-size: 16px;
        }
        .analysis_button a button .brand_button_icon {
            top: auto;
            right: -18%;
            bottom: -60%;
            transform: rotate(164deg);
            transform-origin: center center;
        }
    }
</style>
<section class="brand_analysis">
  <div class="container container-{{ section.settings.container }}">
    <div class="row">
      <div class="brand_analysis_left">
        <h2 class="heading">
          <div class="big_text">B</div>
          <div class="small_text">
            Seen. <br>
            Heard. <br>
            Viral.
          </div>
        </h2>
        <div class="analysis_button">
          <a href="#">
            <button type="button">
              Get Your Free Brand Analysis
              <i class="fa-solid fa-location-arrow brand_button_icon"></i><br>
              <span class="sub_text">Compete smarter, Not harder End To End</span>
            </button>
          </a>
        </div>
      </div>
      <div class="brand_analysis_right">
        <img
          src="{{content_image | image_url }}"
          class="brand_analysis_content_image"
          {%- unless isEditor -%}
            data-aos="zoom-in-up"
            data-aos-duration="2800"
          {%- endunless -%}
          width=""
          height=""
          alt=""
        >
      </div>
    </div>
  </div>
</section>
