<section class="service_card_section">
  <div class="service-page__bg" style="background-image: url('{{background_image| image_url }}');"></div>
  <!-- /.service-page__bg -->
  <div class="container container-{{ section.settings.container }}">
    <div class="service_page__top">
      <div class="column header_section">
        <p class="sec-title__tagline">{{ sub_title }}</p>
        <h2 class="sec-title__title">{{ title }}</h2>
      </div>
      <div class="column service-page__top__text">
        {{ sub_text }}
      </div>
    </div>
    <!-- /.service-page__top -->
    <div class="card_row">
      {% for block in section.blocks %}
        {% liquid
          assign card_title = block.settings.title
          assign card_description = block.settings.description
          assign card_icon = block.settings.icon
          assign custom_icon = block.settings.custom_icon
          assign card_background_shape = block.settings.background_shape
          assign card_link = block.settings.link
        %}
        <div class="service-card-two wow fadeInUp" data-wow-duration="1500ms" data-wow-delay="000ms">
          <div class="service-card-two__content">
            <div class="service-card-two__icon">
              {%- if custom_icon == blank -%}
                <i class="{{card_icon}}"></i>
              {%- else -%}
                {{ custom_icon }}
              {%- endif -%}
            </div>
            <!-- /.service-card-two__price -->
            <h3 class="service-card-two__title">
              <a href="{{card_link}}">
                {{ card_title }}
              </a>
            </h3>
            <!-- /.service-card-two__title -->
            <div class="service-card-two__text">
              {{ card_description }}
            </div>
            <!-- /.service-card-two__text -->
            <a href="{{card_link | default:"#"}}" class="service-card-two__link nionx-btn nionx-btn--black"
              ><span class="service-card-two__link__icon"></span
            ></a>
            <!-- /.blog-card__link -->
          </div>
          <!-- /.service-card-two__content -->
          <div class="service-card-two__element">
            {%- if card_background_shape != blank -%}
              <img src="{{card_background_shape | image_url }}" alt height="" width="">
            {%- endif -%}
          </div>
          <!-- /.service-card-two__element -->
        </div>
      {% endfor %}

      <!-- /.col-md-6 col-lg-4 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container -->
</section>
