    bottom: 0%;
    left: 0%;
    z-index: -2;
    transition: all 0.4s ease-in-out;
    border-radius: 39px;
  }
  .service-card-two:hover .service-card-two__element {
    opacity: 0.3;
  }
  .service-card-two__element {
    position: absolute;
    top: 0%;
    z-index: -1;
    left: 0%;
    width: 100%;
    height: 100%;
