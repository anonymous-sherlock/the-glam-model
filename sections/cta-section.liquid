{%- liquid
  assign title = section.settings.heading
  assign title_feature = section.settings.heading_feature
  assign title_end = section.settings.heading_end
  assign sub_text = section.settings.sub_text
  assign desktop_margin_top = section.settings.desktop_margin_top
  assign desktop_margin_bottom = section.settings.desktop_margin_bottom
  assign mobile_margin_top = section.settings.mobile_margin_top
  assign mobile_margin_bottom = section.settings.mobile_margin_bottom
  assign button_text = section.settings.button_text
  assign button_link = section.settings.button_link
  assign button_subtext = section.settings.button_subtext
-%}

<style>
    #cta {
      background-color: black;
    }
    .cta_section {
        margin-top: {{ mobile_margin_top | append: 'px' }};
        margin-bottom: {{ mobile_margin_bottom | append: 'px' }};

    }
    .wrapper-body{
        padding-bottom: 0px;
    }
    .cta_section .inner {
      padding-top: 50px;
      padding-bottom: 50px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
    .cta_section .inner .l-side {
      width: 100%;
    }
    .cta_section .inner .l-side .heading {
      color: #ffffff;
      font-size: 24px;
      text-align: center;
      line-height: 30px;
    }
  .cta_section .inner .l-side .heading span {
    color: #845ec2;
  }
  .cta_section .r-side {
    display: flex;
    justify-content: center;
    align-items: end;
    flex-direction: column;
  }
  .cta_section .inner .r-side p {
    color: #ffffff;
    margin-top: 10px;
    text-align: center;
  }
  .cta_btn{
    width: 238px;
    margin: 0;
    background: white;
  }
  .l-side p{
    color: #cfcfcf;
    text-align: center;
    margin-bottom: 20px;
  }
   @media (min-width: 768px){
      .cta_section{
          margin-top: {{ desktop_margin_top | append: 'px' }};
          margin-bottom: {{ desktop_margin_bottom | append: 'px' }};
      }
      .cta_section .inner {
        flex-direction: row;
      }
      .cta_section .inner .l-side .heading {
        font-size: 38px;
        padding-right: 15px;
        text-align: left;
        line-height: 44px;
      }
      .cta_section .inner .l-side {
       width: 70%;
      }
      .cta_section .r-side {
        width: 30%;
      }
      .l-side p{
        text-align: left;
        font-size: 15px;
      }
  }
</style>
<section id="cta">
  <div class="cta_section container container-{{ section.settings.container }} ">
    <div class="inner">
      <div class="l-side">
        <h3 class="heading">
          {{ title -}}
          <span>{{ title_feature }}</span>{{ title_end }}
        </h3>
        {{- sub_text -}}
      </div>
      <div class="r-side">
        <div>
          {%- if button_text != blank -%}
            <a href="{{ button_link }}" class="cta_btn button">{{ button_text }}</a>
          {%- endif -%}
          {%- if button_subtext != blank -%}
            <p>{{ button_subtext }}</p>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "CTA Section",
  "settings": [
    {
      "type": "select",
      "id": "container",
      "label": "t:sections.layout.container.option",
      "default": "1770",
      "options": [
        {
          "value": "1170",
          "label": "t:sections.layout.container.option4"
        },
        {
          "value": "1370",
          "label": "t:sections.layout.container.option8"
        },
        {
          "value": "1470",
          "label": "t:sections.layout.container.option5"
        },
        {
          "value": "1570",
          "label": "t:sections.layout.container.option6"
        },
        {
          "value": "1770",
          "label": "t:sections.layout.container.option3"
        },
        {
          "value": "full",
          "label": "t:sections.layout.container.option2"
        }
      ]
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Title Start"
    },
    {
      "type": "textarea",
      "id": "heading_feature",
      "label": "Featured Title"
    },
    {
      "type": "textarea",
      "id": "heading_end",
      "label": "Title End"
    },
    {
      "type": "richtext",
      "id": "sub_text",
      "label": "Sub Text"
    },
    {
      "type": "header",
      "content": "Desktop Settings"
    },
    {
      "type": "range",
      "id": "desktop_margin_top",
      "label": "Margin Top (Desktop)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "desktop_margin_bottom",
      "label": "Margin Bottom (Desktop)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Mobile Settings"
    },
    {
      "type": "range",
      "id": "mobile_margin_top",
      "label": "Margin Top (Mobile)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "mobile_margin_bottom",
      "label": "Margin Bottom (Mobile)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SEE OUR PLANS"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_subtext",
      "label": "Button Subtext",
      "default": "No credit card required!"
    }
  ],
  "presets": [
    {
      "name": "CTA Section",
      "settings": {}
    }
  ]
}
{% endschema %}
