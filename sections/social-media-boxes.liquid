{{ 'social-media-boxes.css' | asset_url | stylesheet_tag }}

<section id="section_counter_1">
  <div class="container container-{{ section.settings.container }}">
    <div class="counter-grid">
      {% for block in section.blocks %}
        {%- case block.type -%}
          {%- when 'instagram' -%}
            <div class="counter-item">
              {%- if block.settings.icon != blank -%}
                {{ block.settings.icon }}
              {%- else -%}
                <i class="custom-icon fab fa-instagram fa-3x"></i>
              {%- endif -%}
              <div class="counter" data-target="{{ block.settings.count }}">0</div>
              <span>{{ block.settings.sub_text }}</span>
            </div>
          {%- when 'youtube' -%}
            <div class="counter-item">
              {%- if block.settings.icon != blank -%}
                {{ block.settings.icon }}
              {%- else -%}
                <i class="custom-icon fab fa-youtube fa-3x"></i>
              {%- endif -%}
              <div class="counter" data-target="{{ block.settings.count }}">0</div>
              <span>{{ block.settings.sub_text }}</span>
            </div>
          {%- when 'facebook' -%}
            <div class="counter-item">
              {%- if block.settings.icon != blank -%}
                {{ block.settings.icon }}
              {%- else -%}
                <i class="custom-icon fab fa-facebook fa-3x"></i>
              {%- endif -%}
              <div class="counter" data-target="{{ block.settings.count }}">0</div>
              <span>{{ block.settings.sub_text }}</span>
            </div>
          {%- when 'total_likes' -%}
            <div class="counter-item">
              {%- if block.settings.icon != blank -%}
                {{ block.settings.icon }}
              {%- else -%}
                <i class="custom-icon fa-solid fa-heart fa-3x"></i>
              {%- endif -%}
              <div class="counter" data-target="{{ block.settings.count }}">0</div>
              <span>{{ block.settings.sub_text }}</span>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

{% javascript %}
  const counters = document.querySelectorAll('.counter');
  counters.forEach((counter) => {
    counter.innerText = '0';
    const updateCounter = () => {
      const target = +counter.getAttribute('data-target');
      const count = +counter.innerText;
      const increment = target / 20;
      if (count < target) {
        counter.innerText = `${Math.ceil(count + increment)}`;
        setTimeout(updateCounter, 1);
      } else counter.innerText = target;
    };
    updateCounter();
  });
{% endjavascript %}

